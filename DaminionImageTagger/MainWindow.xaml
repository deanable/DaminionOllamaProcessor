<Window x:Class="DaminionImageTagger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:DaminionImageTagger.Converters"
        Title="Daminion Image Tagger" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        MinWidth="800" MinHeight="600">

    <Window.Resources>
        <!-- Converters -->
        <converters:BooleanToStringConverter x:Key="BooleanToStringConverter"/>
        <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Foreground" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E7D32"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern GroupBox Style -->
        <Style x:Key="ModernGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Modern Label Style -->
        <Style x:Key="ModernLabel" TargetType="Label">
            <Setter Property="Margin" Value="3"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Prediction Result Style -->
        <Style x:Key="PredictionResultStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20,15">
            <TextBlock Text="Daminion Image Tagger" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Controls -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                
                <!-- Model Selection -->
                <GroupBox Header="Model Selection" Style="{StaticResource ModernGroupBox}">
                    <StackPanel>
                        <Label Content="ONNX Model:" Style="{StaticResource ModernLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding SelectedModelPath}" 
                                     Style="{StaticResource ModernTextBox}" 
                                     ToolTip="Selected ONNX model file"/>
                            <Button Content="Browse" 
                                    Command="{Binding BrowseModelCommand}" 
                                    Style="{StaticResource ModernButton}"/>
                        </StackPanel>
                        
                        <Button Content="Load Model" 
                                Command="{Binding LoadModelCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Margin="0,8,0,0"/>
                        
                        <TextBlock Text="{Binding IsModelLoaded, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Model Loaded|Model Not Loaded'}" 
                                   Margin="3" 
                                   FontWeight="SemiBold" 
                                   Foreground="{Binding IsModelLoaded, Converter={StaticResource BooleanToColorConverter}, ConverterParameter='Green|Red'}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Image Selection -->
                <GroupBox Header="Image Selection" Style="{StaticResource ModernGroupBox}">
                    <StackPanel>
                        <Label Content="Image File:" Style="{StaticResource ModernLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding SelectedImagePath}" 
                                     Style="{StaticResource ModernTextBox}" 
                                     ToolTip="Selected image file"/>
                            <Button Content="Browse" 
                                    Command="{Binding BrowseImageCommand}" 
                                    Style="{StaticResource ModernButton}"/>
                        </StackPanel>
                        
                        <Button Content="Predict Tags" 
                                Command="{Binding PredictCommand}" 
                                Style="{StaticResource SuccessButton}" 
                                Margin="0,8,0,0"/>
                        
                        <ProgressBar IsIndeterminate="{Binding IsPredicting}" 
                                     Height="4" 
                                     Margin="0,8,0,0" 
                                     Visibility="{Binding IsPredicting, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </GroupBox>

                <!-- Status -->
                <GroupBox Header="Status" Style="{StaticResource ModernGroupBox}">
                    <TextBlock Text="{Binding Status}" 
                               TextWrapping="Wrap" 
                               Foreground="#666"/>
                </GroupBox>
            </StackPanel>

            <!-- Right Panel - Image Preview and Results -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="250"/>
                </Grid.RowDefinitions>

                <!-- Image Preview -->
                <GroupBox Grid.Row="0" Header="Image Preview" Style="{StaticResource ModernGroupBox}">
                    <Border Background="#F8F8F8" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1" 
                            CornerRadius="4">
                        <Image Source="{Binding SelectedImagePath}" 
                               Stretch="Uniform" 
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>
                </GroupBox>

                <!-- Prediction Results -->
                <GroupBox Grid.Row="1" Header="Prediction Results" Style="{StaticResource ModernGroupBox}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Categories -->
                            <TextBlock Text="Categories:" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,5"/>
                            <ItemsControl ItemsSource="{Binding CurrentPrediction.Categories}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource PredictionResultStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Label}" 
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding ConfidencePercentage}" 
                                                           Foreground="#666" 
                                                           Margin="10,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Keywords -->
                            <TextBlock Text="Keywords:" 
                                       FontWeight="Bold" 
                                       Margin="0,10,0,5"/>
                            <ItemsControl ItemsSource="{Binding CurrentPrediction.Keywords}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource PredictionResultStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Label}" 
                                                           FontWeight="SemiBold"/>
                                                <TextBlock Grid.Column="1" 
                                                           Text="{Binding ConfidencePercentage}" 
                                                           Foreground="#666" 
                                                           Margin="10,0,0,0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- No Results Message -->
                            <TextBlock Text="No predictions available. Load a model and select an image to get started." 
                                       Foreground="#999" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Margin="20"
                                       Visibility="{Binding CurrentPrediction, Converter={StaticResource NullToVisibilityConverter}}"/>
                        </StackPanel>
                    </ScrollViewer>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <TextBlock Text="{Binding Status}" 
                       Margin="20,10" 
                       VerticalAlignment="Center" 
                       Foreground="#666"/>
        </Border>
    </Grid>
</Window>
